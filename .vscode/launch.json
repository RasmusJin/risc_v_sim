{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug RISC-V Simulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/riscv_sim",
            "args": [
                "tests/task3/loop.bin"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build RISC-V Simulator"
        }
    ]
}
